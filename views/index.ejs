<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Language" content="en" />
    <title><%= title %></title>
    <link href="/static/css/reset.css" rel="stylesheet" type="text/css" />
    <link href="/static/css/index.css" rel="stylesheet" type="text/css" />
  </head>
  <body onload="sortServerTable('js-sort-load');">
    <div id="container">
      <header id="site-header">
        <h1 id="site-header-title"><%= title %></h1>
        <p id="site-header-subtitle"><%= subtitle %></p>
      </header>
      <section id="content">
        <table id="js-servers">
          <thead>
            <tr>
              <th><a id="js-sort-name" href="#" onclick="sortServerTable('js-sort-name'); return false;">Name<div class="arrow-down"></div></a></th>
              <th><a id="js-sort-users" href="#" onclick="sortServerTable('js-sort-users'); return false;">Users<div class="arrow-down"></div></a></th>
              <th><a id="js-sort-load" href="#" onclick="sortServerTable('js-sort-load'); return false;">Load<div class="arrow-down"></div></a></th>
            </tr>
          </thead>
          <tbody>
<% onlineServers.forEach(function (server) { -%>
            <tr class="server-online">
              <td class="server-name"><%= server.name %></td>
              <td class="server-users"><%= server.users %></td>
              <td class="server-load"><%= server.load %></td>
            </tr>
<% }); -%>
          </tbody>
          <tbody>
<% offlineServers.forEach(function (server) { -%>
            <tr class="server-offline">
              <td class="server-name"><%= server.name %></td>
              <td class="server-users"><%= server.users %></td>
              <td class="server-load"><%= server.load %></td>
            </tr>
<% }); -%>
          </tbody>
        </table>
      </section>
      <footer id="site-footer">
        <h2 id="site-footer-links"><a href="<%= repository %>">Source</a><span class="link-separator">&mdash;</span><a href="mailto:nkouevda@gmail.com">Contact</a></h2>
      </footer>
    </div>
    <script src="/static/js/sort.js" type="text/javascript"></script>
  </body>
</html>
